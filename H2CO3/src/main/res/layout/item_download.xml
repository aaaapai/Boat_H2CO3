<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/app_10dp"
        android:layout_marginVertical="@dimen/app_5dp">

        <org.koishi.launcher.h2co3.resources.component.H2CO3TextView
            android:id="@+id/fileNameText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="@string/app_name" />

        <org.koishi.launcher.h2co3.resources.component.H2CO3LinearProgress
            android:id="@+id/fileProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <org.koishi.launcher.h2co3.resources.component.H2CO3TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/app_name"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>